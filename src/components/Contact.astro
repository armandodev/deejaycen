---
import { Mail, MapPin, Phone } from "lucide-react";
---

<section
  id="contact"
  class="px-4 py-8 min-h-screen flex items-center justify-center overflow-hidden"
>
  <div class="w-full max-w-screen-lg mx-auto">
    <header class="text-center mb-12 space-y-2">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        ¡Hagamos tu evento inolvidable!
      </h2>
      <p class="text-xl text-gray-400">
        Contáctame y comencemos a planear tu celebración
      </p>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <div class="bg-gray-200 rounded-2xl p-8 border border-gray-400">
        <h3 class="text-2xl font-bold mb-6">Envíame un Mensaje</h3>
        <form class="space-y-6">
          <label class="grid gap-2">
            <span>Nombre Completo <span class="text-red-500">*</span></span>
            <input
              type="text"
              class="w-full px-4 py-3 bg-gray-100 rounded-lg border border-gray-400 focus:border-teal-500 focus:outline-none transition-all"
              placeholder="John Doe"
              required
            />
          </label>
          <label class="grid gap-2">
            <span>Email <span class="text-red-500">*</span></span>
            <input
              type="email"
              class="w-full px-4 py-3 bg-gray-100 rounded-lg border border-gray-400 focus:border-teal-500 focus:outline-none transition-all"
              placeholder="john.doe@example.com"
              required
            />
          </label>
          <label class="grid gap-2">
            <span>Teléfono</span>
            <input
              type="tel"
              class="w-full px-4 py-3 bg-gray-100 rounded-lg border border-gray-400 focus:border-teal-500 focus:outline-none transition-all"
              placeholder="+52 xxx xxx xxxx"
              required
            />
            <label class="block text-sm font-medium mb-2"
              >Tipo de Evento <span class="text-red-500">*</span>
              <select
                class="w-full px-4 py-3 bg-gray-100 rounded-lg border border-gray-400 focus:border-teal-500 focus:outline-none transition-all"
                required
              >
                <option>Selecciona un tipo</option>
                <option>Boda</option>
                <option>XV años</option>
                <option>Evento Corporativo</option>
                <option>Fiesta Privada</option>
                <option>Graduación</option>
                <option>Otro</option>
              </select>
            </label>
          </label>
          <label class="grid gap-2">
            <span>Fecha del Evento <span class="text-red-500">*</span></span>
            <input
              type="date"
              class="w-full px-4 py-3 bg-gray-100 rounded-lg border border-gray-400 focus:border-teal-500 focus:outline-none transition-all"
              required
            />
          </label>
          <label class="grid gap-2">
            <span>Mensaje <span class="text-red-500">*</span></span>
            <textarea
              rows="4"
              class="w-full px-4 py-3 bg-gray-100 rounded-lg border border-gray-400 focus:border-teal-500 focus:outline-none transition-all"
              placeholder="Cuéntame sobre tu evento..."
              required></textarea>
          </label>
          <button
            type="submit"
            class="w-full bg-teal-500 hover:bg-teal-700 py-4 rounded-full font-semibold transition-all text-white"
          >
            Enviar Mensaje
          </button>
        </form>
      </div>

      <div class="space-y-8">
        <div class="bg-gray-200 rounded-2xl p-8 border border-gray-400">
          <h3 class="text-2xl font-bold mb-6">Contacto Directo</h3>
          <div class="space-y-4">
            <a
              href="tel:+521234567890"
              class="flex items-center space-x-4 hover:text-teal-500 transition-colors"
            >
              <div class="bg-teal-500/20 p-3 rounded-lg">
                <Phone className="text-teal-500 fill-current" />
              </div>
              <div>
                <p class="text-sm text-gray-400">Teléfono</p>
                <p class="font-semibold">+52 123 456 7890</p>
              </div>
            </a>
            <a
              href="mailto:contacto@djcen.mx"
              class="flex items-center space-x-4 hover:text-teal-500 transition-colors"
            >
              <div class="bg-teal-500/20 p-3 rounded-lg">
                <Mail className="text-teal-500" />
              </div>
              <div>
                <p class="text-sm text-gray-400">Email</p>
                <p class="font-semibold">contacto@deejaycen.com</p>
              </div>
            </a>
            <div class="flex items-center space-x-4">
              <div class="bg-teal-500/20 p-3 rounded-lg">
                <MapPin className="text-teal-500" />
              </div>
              <div>
                <p class="text-sm text-gray-400">Ubicación</p>
                <p class="font-semibold">Sahuayo de Morelos, Michoacán</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-gray-200 rounded-2xl p-8 border border-gray-400">
          <h3 class="text-2xl font-bold mb-6">Sígueme en Redes</h3>
          <div class="grid grid-cols-3 gap-4">
            <a
              href="https://wa.me/523328298224"
              target="_blank"
              class="bg-green-600/20 hover:bg-green-600/30 p-6 rounded-lg text-center transition-all hover-scale"
            >
            <WhatsApp
              <p class="text-sm">WhatsApp</p>
            </a>
            <a
              href="https://facebook.com/djcen"
              target="_blank"
              class="bg-blue-600/20 hover:bg-blue-600/30 p-6 rounded-lg text-center transition-all hover-scale"
            >
              <i class="fab fa-facebook text-3xl text-blue-500 mb-2"></i>
              <p class="text-sm">Facebook</p>
            </a>
            <a
              href="https://instagram.com/djcen"
              target="_blank"
              class="bg-pink-600/20 hover:bg-pink-600/30 p-6 rounded-lg text-center transition-all hover-scale"
            >
              <i class="fab fa-instagram text-3xl text-pink-500 mb-2"></i>
              <p class="text-sm">Instagram</p>
            </a>
          </div>
        </div>

        <!-- Horario -->
        <div
          class="bg-gradient-to-r from-purple-600 to-pink-600 rounded-2xl p-8"
        >
          <h3 class="text-2xl font-bold mb-4">Disponibilidad</h3>
          <p class="mb-2">
            <i class="fas fa-check-circle mr-2"></i> Eventos de Lunes a Domingo
          </p>
          <p class="mb-2">
            <i class="fas fa-check-circle mr-2"></i> Respuesta en menos de 24 horas
          </p>
          <p>
            <i class="fas fa-check-circle mr-2"></i> Cobertura en todo Michoacán
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
