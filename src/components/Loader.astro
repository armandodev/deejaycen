<div
  id="loader-container"
  class="fixed inset-0 z-50 flex items-center justify-center bg-gray-100"
>
  <div
    class="w-10 aspect-square border-4 border-black/10 border-t-black animate-spin-clockwise animate-iteration-count-infinite rounded-full"
  >
  </div>
</div>
<script>
  window.addEventListener("load", () => {
    const loaderContainer = document.getElementById("loader-container");
    if (loaderContainer) {
      loaderContainer.style.display = "none";
    }
  });
</script>
